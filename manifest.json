{
  "manifest_version": 3,
  "name": "Исследователь Рунета",
  "version": "1.0",
  "description": "Расширение для тех, кто только начинает свое знакомство с обширной сетью интернет. Что тебя ждет на следующей странице?",
  
  "permissions": [
    "activeTab",
    "storage"
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Нажми для открытия"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/achievement_display.js"]
    },
    {
      "matches": ["<all_urls>"],
      "js": ["content/achievement_loader.js"]
    }
  ],
  
  "icons": {
    "128": "assets/icons/icon.png"
  }
}